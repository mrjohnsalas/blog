<%= form_for @customer, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :customer_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :customer_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :razon_social, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :razon_social, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ruc, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :ruc, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.email_field :email, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  customers_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
